
@model ContentCreateViewModel
@{
  ViewData["Title"] = "ثبت ";
  var hide200 = "";
  var hide800 = "";


  var type = Context.Request.Query["type"].ToString();
  if (type == "1")
  {
    ViewData["Title"] = "ثبت  آهنگ";
    
  }
  else if (type == "800")
  {
    ViewData["Title"] = "ثبت  کارمند";
    hide800 = "d-none";
  }
  ViewBag.BreadCrump = ViewData["Title"];

}


<div class="card">
  <form asp-controller="Content"
        asp-action="Create"
        asp-route-type="@type"
        method="post"
        enctype="multipart/form-data"
        class="form-horizontal">
    <div class="card-header">

      <strong>
        @ViewData["Title"]
